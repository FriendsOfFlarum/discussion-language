{
  "name": "fof/discussion-language",
  "description": "Specify the language a discussion is written in & sort by language",
  "keywords": [
    "flarum"
  ],
  "type": "flarum-extension",
  "license": "MIT",
  "require": {
    "flarum/core": "^0.1.0-beta.10",
    "fof/extend": ">=0.2.0",
    "matriphe/iso-639": "^1.2",
    "rinvex/countries": "^6.1.2 || ^7.0.1"
  },
  "authors": [
    {
      "name": "David Sevilla Martin",
      "email": "me+fof@datitisev.me",
      "role": "Developer"
    }
  ],
  "autoload": {
    "psr-4": {
      "FoF\\DiscussionLanguage\\": "src/"
    }
  },
  "extra": {
    "flarum-extension": {
      "title": "FoF Discussion Language",
      "icon": {
        "name": "fas fa-language",
        "backgroundColor": "#e74c3c",
        "color": "#fff"
      }
    },
    "flagrow": {
      "discuss": "https://discuss.flarum.org/d/23702-friendsofflarum-discussion-language"
    }
  }
}